<p id="notice"><%= notice %></p>

<h1>Accounts Receivables</h1>

<table>
  <thead>
    <tr>
      <th>State</th>
      <th>Description</th>
      <th>Kind</th>
      <th>Issue date</th>
      <th>Expiration date</th>
      <th>Received date</th>
      <th>Total value</th>
      <th>Received value</th>
      <th>Remaining value</th>
      <th>Total parcels</th>
      <th>Parcel</th>
      <th>Sales</th>
      <th>Payment type</th>
      <th>System user</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @accounts_receivables.each do |accounts_receivable| %>
      <tr>
        <td><%= accounts_receivable.state %></td>
        <td><%= accounts_receivable.description %></td>
        <td><%= accounts_receivable.kind %></td>
        <td><%= accounts_receivable.issue_date %></td>
        <td><%= accounts_receivable.expiration_date %></td>
        <td><%= accounts_receivable.received_date %></td>
        <td><%= accounts_receivable.total_value %></td>
        <td><%= accounts_receivable.received_value %></td>
        <td><%= accounts_receivable.remaining_value %></td>
        <td><%= accounts_receivable.total_parcels %></td>
        <td><%= accounts_receivable.parcel %></td>
        <td><%= accounts_receivable.sales %></td>
        <td><%= accounts_receivable.payment_type %></td>
        <td><%= accounts_receivable.system_user %></td>
        <td><%= link_to 'Show', accounts_receivable %></td>
        <td><%= link_to 'Edit', edit_accounts_receivable_path(accounts_receivable) %></td>
        <td><%= link_to 'Destroy', accounts_receivable, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

