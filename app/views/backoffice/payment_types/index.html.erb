<h1 class="page-header">Tipos de Pagamento</h1>

<div class="panel panel-default">
	<div class="panel-heading">
		Listando Tipos de Pagamento
		<%= link_to new_backoffice_payment_type_path, class: "btn btn-success btn-circle
		pull-right", style:"margin-top: -5px" do %>
		<i class="fa fa-plus"></i>
		<% end -%>
	</div>
	<!-- /.panel-heading -->
	<div class="panel-body">
		<div class="table-responsive">
			<table class="table table-hover">
				<thead>
					<tr>
						<th>Kind</th>
						<th>Description</th>
						<th>Interest rates</th>
						<th>Max parcel</th>
						<th></th>
					</tr>
				</thead>

				<tbody>
					<% @payment_types.each do |payment_type| %>
					<tr>
						<td><%= payment_type.kind %></td>
						<td><%= payment_type.description %></td>
						<td><%= payment_type.interest_rates %></td>
						<td><%= payment_type.max_parcel %></td>
						<td style="width: 150px">
							<%= link_to backoffice_payment_type_path(payment_type),
							class: "btn btn-primary btn-circle" do %>
							<i class="fa fa-info-circle"></i>
							<% end %>
							<%= link_to edit_backoffice_payment_type_path(payment_type),
							class: "btn btn-primary btn-circle" do %>
							<i class="fa fa-edit"></i>
							<% end %>
							<button type="button" disabled="disabled"
							class="btn btn-danger btn-circle">
							<i class="fa fa-minus"></i>
						</button>
					</td>
				</tr>
				<% end %>
			</tbody>
		</table>
	</div>
	<!-- /.table-responsive -->
</div>
<!-- /.panel-body -->
</div>

