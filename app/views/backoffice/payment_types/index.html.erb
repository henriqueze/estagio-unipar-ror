<h1 class="page-header">Tipos de Pagamento</h1>

<button class="btn btn-info icon fa fa-arrow-down pull-right" data-toggle="collapse"
	data-target="#demo"> Pesquisa</button>
<br>
<br>
<div id="demo" class="collapse">
	<%= search_form_for [:backoffice, @q] do |f| %>
	<div class="col-md-8">
		<%= f.search_field :kind_or_description_cont,
		 :placeholder => "Digite sua Pesquisa",
		:class => 'form-control' %>
	</div>
	<div class="actions">
		<%= link_to " ", request.path, :class => 'icon fa fa-times btn btn-danger' %>
		<%= f.submit "Pesquisar", :class => 'btn btn-primary' %>
	</div>
	<br>
	<% end %>
</div>

<div class="panel panel-default">
	<div class="panel-heading">
		Listando Tipos de Pagamento
		<%= link_to new_backoffice_payment_type_path, class: "btn btn-success btn-circle
		pull-right", style:"margin-top: -5px" do %>
		<i class="fa fa-plus"></i>
		<% end -%>
	</div>
	<!-- /.panel-heading -->
	<div class="panel-body">
		<div class="table-responsive">
			<table class="table table-hover">
				<thead>
					<tr>
						<th>Tipo</th>
						<th>Descrição</th>
						<th>Taxas</th>
						<th>Maximo de Parcelas</th>
						<th></th>
					</tr>
				</thead>

				<tbody>
					<% @payment_types.each do |payment_type| %>
					<tr>
						<td><%= payment_type.kind %></td>
						<td><%= payment_type.description %></td>
						<td><%= percentual_formatado(payment_type.interest_rates) %></td>
						<td><%= payment_type.max_parcel %></td>
						<td style="width: 150px">
							<%= link_to edit_backoffice_payment_type_path(payment_type),
							class: "btn btn-primary btn-circle" do %>
							<i class="fa fa-edit"></i>
							<% end %>
							<button type="button" disabled="disabled"
							class="btn btn-danger btn-circle">
							<i class="fa fa-minus"></i>
						</button>
					</td>
				</tr>
				<% end %>
			</tbody>
		</table>
		<%= paginate @payment_types %>
	</div>
	<!-- /.table-responsive -->
</div>
<!-- /.panel-body -->
</div>

