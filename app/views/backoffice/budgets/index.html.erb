<h1 class="page-header">Orçamentos</h1>

<div class="panel panel-default">
	<div class="panel-heading">
		Listando Orçamentos
		<%= link_to new_backoffice_budget_path, class: "btn btn-success btn-circle
		pull-right", style:"margin-top: -5px" do %>
		<i class="fa fa-plus"></i>
		<% end -%>
	</div>
	<!-- /.panel-heading -->
	<div class="panel-body">
		<div class="table-responsive">
			<table class="table table-hover">
				<thead>
					<tr>
						<th>#</th>
						<th>Tipo</th>
						<th>Nota</th>
						<th>Data</th>
						<th>Data Vencimento</th>
						<th>Valor Total</th>
						<th>Estado</th>
						<th>Cliente</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					<% @budgets.each do |budget| %>
					<tr>
						<td><%= budget.id %></td>
						<td><%= budget.kind %></td>
						<td><%= budget.note %></td>
						<td><%= budget.date %></td>
						<td><%= budget.expiration_date %></td>
						<td><%= budget.total_value %></td>
						<td><%= budget.state %></td>
						<td><%= budget.person.name %></td>
						<td style="width: 150px">
							<%= link_to backoffice_budget_path(budget),
							class: "btn btn-primary btn-circle" do %>
							<i class="fa fa-info-circle"></i>
							<% end %>
							<%= link_to edit_backoffice_budget_path(budget),
							class: "btn btn-primary btn-circle" do %>
							<i class="fa fa-edit"></i>
							<% end %>
							<button type="button" disabled="disabled"
							class="btn btn-danger btn-circle">
							<i class="fa fa-minus"></i>
						</button>
					</td>
				</tr>
				<% end %>
			</tbody>
		</table>
	</div>
	<!-- /.table-responsive -->
</div>
<!-- /.panel-body -->
</div>
