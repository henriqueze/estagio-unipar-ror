<h1 class="page-header">Orçamentos</h1>

<% if @budget.errors.any? %>
<div class="alert alert-danger alert-dismissable">
  <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>

  <ul>
    <% @budget.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end -%>
  </ul>

</div>
<% end -%>

<div class="panel panel-default">
  <div class="panel-heading">
    <%= link_to backoffice_budgets_path, class: "btn btn-warning btn-circle pull-right",
    style:"margin-top: -5px"  do %>
    <i class="fa fa-arrow-left"></i>
    <% end %>
    <%= action %>
  </div>
  <!-- /.panel-heading -->
  <div class="panel-body">
    <div class="col-lg-6">
      <%= form_for([:backoffice, @budget]) do |f| %>

      <div class="form-group">

      <div class="field">
        <%= f.label :kind %>
        <%= f.text_field :kind %>
      </div>

      <div class="field">
        <%= f.label :note %>
        <%= f.text_field :note %>
      </div>

      <div class="field">
        <%= f.label :date %>
        <%= f.datetime_select :date %>
      </div>

      <div class="field">
        <%= f.label :expiration_date %>
        <%= f.datetime_select :expiration_date %>
      </div>

      <div class="field">
        <%= f.label :total_value %>
        <%= f.text_field :total_value %>
      </div>

      <div class="field">
        <%= f.label :state %>
        <%= f.text_field :state %>
      </div>

      <div class="field">
        <%= f.label :person_id %>
        <%= f.text_field :person_id %>
      </div>

      </div>

      <button type="submit" class="btn btn-success">Salvar</button>
      <% end %>
    </div>
  </div>
  <!-- /.panel-body -->
</div>
