<h1 class="page-header">Vendas</h1>

<div class="panel panel-default">
	<div class="panel-heading">
		Listando Vendas
		<%= link_to new_backoffice_sale_path, class: "btn btn-success btn-circle
		pull-right", style:"margin-top: -5px" do %>
		<i class="fa fa-plus"></i>
		<% end -%>
	</div>
	<!-- /.panel-heading -->
	<div class="panel-body">
		<div class="table-responsive">
			<table class="table table-hover">
				<thead>
					<tr>
						<th>#</th>
						<th>Data</th>
						<th>Valor Total</th>
						<th>Desconto</th>
						<th>Estado</th>
						<th>Cliente</th>
						<th>Tipo de Pagamento</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					<% @sales.each do |sale| %>
					<tr>
						<td><%= sale.id %></td>
						<td><%= sale.date %></td>
						<td><%= sale.total_value %></td>
						<td><%= sale.discount_value %></td>
						<td><%= sale.state %></td>
						<td><%= sale.person.name %></td>
						<td><%= sale.payment_type.kind %></td>

						<td style="width: 150px">
							<%= link_to backoffice_sale_path(sale),
							class: "btn btn-primary btn-circle" do %>
							<i class="fa fa-info-circle"></i>
							<% end %>
							<%= link_to edit_backoffice_sale_path(sale),
							class: "btn btn-primary btn-circle" do %>
							<i class="fa fa-edit"></i>
							<% end %>
							<button type="button" disabled="disabled"
							class="btn btn-danger btn-circle">
							<i class="fa fa-minus"></i>
						</button>
					</td>
				</tr>
				<% end %>
			</tbody>
		</table>
	</div>
	<!-- /.table-responsive -->
</div>
<!-- /.panel-body -->
</div>
