<p id="notice"><%= notice %></p>

<h1>Backoffice Sales</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Total value</th>
      <th>Discount value</th>
      <th>State</th>
      <th>Person</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @backoffice_sales.each do |backoffice_sale| %>
      <tr>
        <td><%= backoffice_sale.date %></td>
        <td><%= backoffice_sale.total_value %></td>
        <td><%= backoffice_sale.discount_value %></td>
        <td><%= backoffice_sale.state %></td>
        <td><%= backoffice_sale.person %></td>
        <td><%= link_to 'Show', backoffice_sale %></td>
        <td><%= link_to 'Edit', edit_backoffice_sale_path(backoffice_sale) %></td>
        <td><%= link_to 'Destroy', backoffice_sale, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

