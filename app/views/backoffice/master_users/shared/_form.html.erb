<h1 class="page-header">Usuarios</h1>

<% if @master_user.errors.any? %>
<div class="alert alert-danger alert-dismissable">
  <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>

  <ul>
    <% @master_user.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end -%>
  </ul>

</div>
<% end -%>

<div class="panel panel-default">
  <div class="panel-heading">
    <%= link_to backoffice_master_users_path, class: "btn btn-warning btn-circle pull-right",
    style:"margin-top: -5px"  do %>
    <i class="fa fa-arrow-left"></i>
    <% end %>
    <%= action %>
  </div>
  <!-- /.panel-heading -->
  <div class="panel-body">
    <div class="form-horizontal">
      <%= form_for([:backoffice, @master_user]) do |f| %>
      <div class="row">
        <div class="form-group">
          <%= f.label :email, :class => 'control-label col-lg-2' %>
          <div class="col-lg-3">
            <%= f.email_field :email, :class => 'form-control', :placeholder => 'Ex: email@email.com *' %>
          </div>
        </div>
        <div class="row">
          <%= f.label :password, :class => 'control-label col-lg-2' %>
          <div class="col-lg-2">
            <%= f.password_field :password, :class => 'form-control',
            :placeholder => 'Senha Minimo 6 Caracteres *' %>
          </div>
          <%= f.label :password_confirmation, :class => 'control-label col-lg-1' %>
          <div class="col-lg-2">
            <%= f.password_field :password_confirmation, :class => 'form-control',
            :placeholder => 'Confirmação de Senha *' %>
          </div>
        </div>
      </div>
      <button type="submit" class="btn btn-success">Salvar</button>
      <% end %>
    </div>
  </div>
  <!-- /.panel-body -->
</div>
