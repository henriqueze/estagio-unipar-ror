<h1 class="page-header">Usuarios</h1>

<div class="panel panel-default">
	<div class="panel-heading">
		Listando Usuarios
		<%= link_to new_backoffice_master_user_path, class: "btn btn-success btn-circle
		pull-right", style:"margin-top: -5px" do %>
		<i class="fa fa-plus"></i>
		<% end -%>
	</div>
	<!-- /.panel-heading -->
	<div class="panel-body">
		<div class="table-responsive">
			<table class="table table-hover">
				<thead>
					<tr>
						<th>#</th>
						<th>Email</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					<% @master_users.each do |master_user| %>
					<tr>
						<td><%= master_user.id %></td>
						<td><%= master_user.email %></td>
						<td style="width: 150px">
							<%= link_to edit_backoffice_master_user_path(master_user),
							class: "btn btn-primary btn-circle" do %>
							<i class="fa fa-edit"></i>
							<% end %>
							<button type="button" disabled="disabled"
							class="btn btn-danger btn-circle">
							<i class="fa fa-minus"></i>
						</button>
					</td>
				</tr>
				<% end %>
			</tbody>
		</table>
		<%= paginate @products %>
	</div>
	<!-- /.table-responsive -->
</div>
<!-- /.panel-body -->
</div>
