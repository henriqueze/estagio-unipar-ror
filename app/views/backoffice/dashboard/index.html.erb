<h1 class="page-header">Dashboard</h1>

<% @sales.each do |sale| %>
<tr>
	<td><%= sale.id %></td>
	<td><%= sale.date %></td>
	<td><%= valor_formatado(sale.total_value) %></td>
	<td><%= valor_formatado(sale.discount_value) %></td>
	<td><%= sale.state %></td>
	<td><%= sale.person.name %></td>
	<td><%= sale.payment_type.kind %></td>
	</tr>
	<% end -%>



