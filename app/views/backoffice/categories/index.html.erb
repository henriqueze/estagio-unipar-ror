<h1 class="page-header">Categorias</h1>

<button class="btn btn-info icon fa fa-arrow-down pull-right" data-toggle="collapse"
	data-target="#demo"> Pesquisa</button>
<br>
<br>
<div id="demo" class="collapse">
	<%= search_form_for [:backoffice, @q] do |f| %>
		<div class="col-md-8">
			<%= f.search_field :description_cont, :placeholder => "Digite sua Pesquisa",
			 :class => 'form-control' %>
		</div>
	<div class="actions">
		<%= link_to " ", request.path, :class => 'icon fa fa-times btn btn-danger' %>
		<%= f.submit "Pesquisar", :class => 'btn btn-primary' %>
	</div>
		<br>
	<% end %>
</div>

<div class="panel panel-default">
	<div class="panel-heading">
		Listando Categorias
		<%= link_to new_backoffice_category_path, class: "btn btn-success btn-circle
		pull-right", style:"margin-top: -5px" do %>
		<i class="fa fa-plus"></i>
		<% end -%>
	</div>
	<!-- /.panel-heading -->
	<div class="panel-body">
		<div class="table-responsive">
			<table class="table table-hover">
				<thead>
					<tr>
						<th><%= sort_link(@q, :id, "#") %></th>
						<th><%= sort_link(@q, :id, "DescriÃ§Ã£o") %></th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					<% @categories.each do |category| %>
					<tr>
						<td><%= category.id %></td>
						<td><%= category.description %></td>
						<td style="width: 150px">
							<%= link_to edit_backoffice_category_path(category),
							class: "btn btn-primary btn-circle" do %>
							<i class="fa fa-edit"></i>
							<% end %>
							<button type="button" disabled="disabled"
							class="btn btn-danger btn-circle">
							<i class="fa fa-minus"></i>
						</button>
					</td>
				</tr>
				<% end %>
			</tbody>
		</table>
		<%= paginate @categories %>
	</div>
	<!-- /.table-responsive -->
</div>
<!-- /.panel-body -->
</div>
