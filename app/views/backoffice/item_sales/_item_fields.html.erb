<div class="nested-fields">

  <div class="row remove-item">
    <div class="form-group">
      <div class="col-lg-12">
        <%= f.association :product, label_method: :description, value_method: :id,
        include_blank: false, :class => 'control-label col-lg-5' %>
        <hr/>
      </div>
    </div>
    <div class="form-group">
      <div class="col-md-2">
          <%= f.input :amount, input_html: {min: 1, step: 1}, :id => 'quantidade', :onblur => 'soma' %>
      </div>
      <div class="row">
        <div class="form-group">
          <div class="col-md-1">
              <%= f.input :value, :id => 'valor', :onblur => 'soma' %>
          </div>
        </div>
      </div>
    </div>
    <div class="form-group">
      <div class="col-md-1">
          <%= f.text_field :total_value, :id => 'valor_total_produto' %>
      </div>
    </div>

    <div class="col-md-2 container-remote-item" style="margin-top: 25px">
      <%= link_to_remove_association "Remover produto", f, :class => "btn btn-danger bt-remove-item"%>
    </div>
  </div>

</div>
