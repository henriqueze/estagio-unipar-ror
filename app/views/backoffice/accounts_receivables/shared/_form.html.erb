<h1 class="page-header">Contas a Receber</h1>

<% if @accounts_receivable.errors.any? %>
<div class="alert alert-danger alert-dismissable">
  <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>

  <ul>
    <% @accounts_receivable.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end -%>
  </ul>

</div>
<% end -%>

<div class="panel panel-default">
  <div class="panel-heading">
    <%= link_to backoffice_accounts_receivables_path,
    class: "btn btn-warning btn-circle pull-right",
      style:"margin-top: -5px"  do %>
      <i class="fa fa-arrow-left"></i>
      <% end %>
      <%= action %>
    </div>
    <!-- /.panel-heading -->
    <div class="panel-body">
      <div class="col-lg-12">
        <%= form_for([:backoffice, @accounts_receivable],
        html: { class: 'form-horizontal' }) do |f| %>

        <div class="form-group">
          <div class="container">

            <div class="row">
              <div class="col">
                <%= f.label :state %>
                <%= f.text_field :state %>

                <div class="col">
                  <%= f.label :description %>
                  <%= f.text_field :description %>
                </div>

                <div class="col">
                  <%= f.label :kind %>
                  <%= f.text_field :kind %>
                </div>
              </div>

              <div class="field">
                <%= f.label :issue_date %>
                <%= f.datetime_select :issue_date %>
              </div>

              <div class="field">
                <%= f.label :expiration_date %>
                <%= f.datetime_select :expiration_date %>
              </div>

              <div class="field">
                <%= f.label :received_date %>
                <%= f.datetime_select :received_date %>
              </div>

              <div class="field">
                <%= f.label :total_value %>
                <%= f.text_field :total_value %>
              </div>

              <div class="field">
                <%= f.label :received_value %>
                <%= f.text_field :received_value %>
              </div>

              <div class="field">
                <%= f.label :remaining_value %>
                <%= f.text_field :remaining_value %>
              </div>

              <div class="field">
                <%= f.label :total_parcels %>
                <%= f.number_field :total_parcels %>
              </div>

              <div class="field">
                <%= f.label :parcel %>
                <%= f.number_field :parcel %>
              </div>

              <div class="field">
                <%= f.label :sale_id %>
                <%= f.text_field :sale_id %>
              </div>

            </div>
          </div>

          <button type="submit" class="btn btn-success">Salvar</button>
          <% end %>
        </div>
      </div>
      <!-- /.panel-body -->
    </div>
