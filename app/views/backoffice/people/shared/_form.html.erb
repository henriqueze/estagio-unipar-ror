<h1 class="page-header">Pessoas</h1>

<% if @person.errors.any? %>
<div class="alert alert-danger alert-dismissable">
  <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>

  <ul>
    <% @person.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end -%>
  </ul>

</div>
<% end -%>

<div class="panel panel-default">
  <div class="panel-heading">
    <%= link_to backoffice_people_path, class: "btn btn-warning btn-circle pull-right",
    style:"margin-top: -5px"  do %>
    <i class="fa fa-arrow-left"></i>
    <% end %>
    <%= action %>
  </div>
  <!-- /.panel-heading -->
  <div class="panel-body">
    <div class="form-horizontal">
      <%= form_for([:backoffice, @person]) do |f| %>
      <div class="row">
        <div class="form-group">
          <%= f.label :kind, :class => 'control-label col-lg-2' %>
          <div class="col-lg-2 ">
            <%= f.select(:kind, options_for_select([['Fisica', 'Fisica'], ['Juridica', 'Juridica']]), {:id => 'tipo_pessoa'}, {:onchange => 'exibir_ocultar(this)',
             :class => 'form-control'}) %>
           </div>
         </div>
       </div>

       <!-- Pessoa Fisica -->
       <div id="pes_fisica">
        <div class='row'>
          <div class="form-group">
            <%= f.label :name, :class => 'control-label col-lg-2' %>
            <div class="col-lg-8">
              <%= f.text_field :name, :class => 'form-control'%>
            </div>
          </div>
          <div class="form-group">
            <%= f.label :person_rg, :class => 'control-label col-lg-2' %>
            <div class="col-lg-3">
              <%= f.text_field :person_rg, :class => 'form-control mask_rg' %>
            </div>
            <%= f.label :person_cpf, :class => 'control-label col-lg-2' %>
            <div class="col-lg-3">
              <%= f.text_field :person_cpf, :class => 'form-control mask_cpf' %>
            </div>
          </div>
        </div>
      </div>

      <!-- Pessoa Juridica -->
      <div id="pes_juridica">
        <div class="row">
          <div class="form-group">
            <%= f.label :company_name, :class => 'control-label col-lg-2' %>
            <div class="col-lg-8">
              <%= f.text_field :company_name, :class => 'form-control' %>
            </div>
          </div>
          <div class="form-group">
            <%= f.label :personC_ie, :class => 'control-label col-lg-2' %>
            <div class="col-lg-3">
              <%= f.text_field :personC_ie, :class => 'form-control mask_ie' %>
            </div>
            <div id="cnpj">
              <%= f.label :personC_cnpj, :class => 'control-label col-lg-2' %>
              <div class="col-lg-3">
                <%= f.text_field :personC_cnpj, :class => 'form-control mask_cnpj' %>
              </div>
            </div>
          </div>
        </div>
      </div>
      <br>

      <!-- endereço -->
      <fieldset>
        <legend> Endereço </legend>
        <div class="row">
          <div class="form-group">
            <%= f.label :address, :class => 'control-label col-lg-1' %>
            <div class="col-lg-4">
              <%= f.text_field :address, :class => 'form-control' %>
            </div>

            <%= f.label :address_number, :class => 'control-label col-xs-1' %>
            <div class="col-lg-1">
              <%= f.text_field :address_number, :class => 'form-control' %>
            </div>

            <%= f.label :address_complement, :class => 'control-label col-xs-1' %>
            <div class="col-lg-3">
              <%= f.text_field :address_complement, :class => 'form-control' %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :address_bairro, :class => 'control-label col-xs-1' %>
            <div class="col-md-2">
              <%= f.text_field :address_bairro, :class => 'form-control' %>
            </div>

            <%= f.label :address_zip, :class => 'control-label col-xs-1' %>
            <div class="col-md-2">
              <%= f.text_field :address_zip, :class => 'form-control mask_cep' %>
            </div>

            <%= f.label :address_city, :class => 'control-label col-xs-1' %>
            <div class="col-lg-2">
             <%= f.text_field :address_city, :class => 'form-control' %>
           </div>

           <%= f.label :address_state, :class => 'control-label col-xs-1' %>
           <div class="col-lg-1">
            <%= f.text_field :address_state, :class => 'form-control' %>
          </div>
        </div>
      </div>
      <br>
    </fieldset>
    <!-- end endereço -->

    <!-- contato -->
    <fieldset>
      <legend> Contato </legend>
      <div class="row">
        <div class="form-group">
          <%= f.label :person_tel1, :class => 'control-label col-lg-1' %>
          <div class="col-lg-2">
            <%= f.text_field :person_tel1, :class => 'form-control mask_celphone' %>
          </div>
          <%= f.label :person_tel2, :class => 'control-label col-xs-1' %>
          <div class="col-lg-2">
            <%= f.text_field :person_tel2, :class => 'form-control mask_phone' %>
          </div>
          <%= f.label :person_email, :class => 'control-label col-xs-1' %>
          <div class="col-lg-4">
            <%= f.text_field :person_email, :class => 'form-control' %>
          </div>
        </div>
      </div>
      <br>

    </fieldset>
    <!-- end contato -->
    <fieldset>
      <legend> Informações Extras </legend>
      <div class="row">
        <div class="form-group">
          <%= f.label :person_obs, :class => 'control-label col-lg-2' %>
          <div class="col-lg-8">
            <%= f.text_area :person_obs, :class => 'form-control', :rows => '5' %>
          </div>
        </div>
      </div>
    </fieldset>

    <button id="btn_sub" type="submit" class="btn btn-success">Salvar</button>
    <% end %>
  </div>
</div>
<!-- /.panel-body -->
</div>
