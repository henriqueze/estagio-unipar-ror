<h1 class="page-header">Produtos</h1>

<% if @product.errors.any? %>
<div class="alert alert-danger alert-dismissable">
  <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>

  <ul>
    <% @product.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end -%>
  </ul>

</div>
<% end -%>

<div class="panel panel-default">
  <div class="panel-heading">
    <%= link_to backoffice_products_path, class: "btn btn-warning btn-circle pull-right",
    style:"margin-top: -5px"  do %>
    <i class="fa fa-arrow-left"></i>
    <% end %>
    <%= action %>
  </div>
  <!-- /.panel-heading -->
  <div class="panel-body">
    <div class="form-horizontal">
      <%= form_for([:backoffice, @product]) do |f| %>

      <div class="row">
        <div class="form-group">
          <%= f.label :product_code, :class => 'control-label col-lg-2' %>
          <div class="col-lg-2">
            <%= f.text_field :product_code, :class => 'form-control', :placeholder => '*' %>
          </div>
          <div  class="col-lg-1">
            <%= f.label :description, :class => 'control-label col-lg-2' %>
          </div>
          <div class="col-lg-6">
            <%= f.text_field :description, :class => 'form-control', :placeholder => '*' %>
          </div>

        </div>
      </div>
      <!-- end principal -->
      <!-- select categoria -->
      <div class="row col-lg-13">
        <div class="form-group">
          <%= f.label :category_id, :class => 'control-label col-lg-2' %>
          <div class="col-lg-2">
            <%= f.collection_select :category_id, Category.all, :id, :description,
            {}, {:class => 'form-control', :id => 'e1'} %>
          </div>
        </div>
      </div>
      <!-- end categorias-->

      <!-- form valores -->
      <div class="row">
        <div class="form-group">
          <%= f.label :purchase_price, :class => 'control-label col-lg-2' %>
          <div class="col-lg-2">
            <%= f.text_field :purchase_price, :id => 'texto', :class => 'form-control money', :id => 'valor_compra' %>
          </div>
          <%= f.label :sale_price, :class => 'control-label col-lg-2' %>
          <div class="col-lg-2">
            <%= f.text_field :sale_price, :class => 'form-control money', :placeholder => '*', :id => 'valor_venda' %>
          </div>
          <%= f.label :profit_margin, :class => 'control-label col-lg-2' %>
          <div class="col-lg-1">
            <%= f.text_field :profit_margin, :class => 'form-control mask_percent',
             :id => 'margem', disabled: true %>
          </div>
        </div>
      </div>
      <!-- end valores -->

      <!-- form estoque -->
      <div class="row">
        <div class="form-group">
          <%= f.label :stock, :class => 'control-label col-lg-2' %>
          <div class="col-lg-2">
            <%= f.text_field :stock, :class => 'form-control' %>
          </div>
          <%= f.label :stock_reserved, :class => 'control-label col-lg-2' %>
          <div class="col-lg-2">
            <%= f.text_field :stock_reserved, disabled: true, :class => 'form-control' %>
          </div>
        </div>
      </div>
      <!-- end estoque -->

      <button type="submit" class="btn btn-success">Salvar</button>
      <% end %>
    </div>
  </div>
  <!-- /.panel-body -->
</div>
