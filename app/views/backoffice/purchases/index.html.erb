<p id="notice"><%= notice %></p>

<h1>Backoffice Purchases</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Total value</th>
      <th>Freight value</th>
      <th>Person</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @backoffice_purchases.each do |backoffice_purchase| %>
      <tr>
        <td><%= backoffice_purchase.date %></td>
        <td><%= backoffice_purchase.total_value %></td>
        <td><%= backoffice_purchase.freight_value %></td>
        <td><%= backoffice_purchase.person %></td>
        <td><%= link_to 'Show', backoffice_purchase %></td>
        <td><%= link_to 'Edit', edit_backoffice_purchase_path(backoffice_purchase) %></td>
        <td><%= link_to 'Destroy', backoffice_purchase, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

